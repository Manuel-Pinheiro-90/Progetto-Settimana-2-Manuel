@model Progetto_Settimana_2_Manuel.Models.Utente

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Login</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input asp-for="Username" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordHash"></label>
                            <input type="password" asp-for="PasswordHash" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-area="" asp-controller="Auth" asp-action="Register" class="btn btn-link">Registrati</a>
                </div>
            </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewBag.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>
