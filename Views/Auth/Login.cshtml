@model Progetto_Settimana_2_Manuel.Models.Utente

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash"></label>
        <input type="password" asp-for="PasswordHash" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
<a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">Registrati</a>


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.ErrorMessage
    </div>
}
