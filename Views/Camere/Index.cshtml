@model IEnumerable<Progetto_Settimana_2_Manuel.Models.Camera>
@{
    ViewData["Title"] = "Camere";
}
<h2>Camera</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>

</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descrizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipologia)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descrizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipologia)
                </td>
         
                <td>
                   
                   
                    <a class="btn btn-danger" onclick="deleteCamera(@item.ID)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {



    <script>
        function deleteCamera(id) {
            if (confirm("Sicuro di voler eliminare la Camera?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Camere")',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert('Errore nell eliminazione');
                        }
                    },
                    error: function (err) {
                        alert('Error: ' + err.responseText);
                    }
                });
            }
        }
    </script>





}